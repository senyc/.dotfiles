#!/usr/bin/env bash

commands=(
    shutdown
    reboot
    lock
    suspend
)
available_commands=$(printf "%s\n" "${commands[@]}")

selected_command="$(echo -e "$available_commands" | dmenu -c -l 4 -bw 2)"

run_cmd() {
    if [[ $1 == '--shutdown' ]]; then
        shutdown -h now
    elif [[ $1 == '--reboot' ]]; then
        reboot
    elif [[ $1 == '--suspend' ]]; then
        mpc -q pause
        amixer set Master mute
        systemctl suspend
    elif [[ $1 == '--lock' ]]; then
        lock_screen
    fi
}

case "$selected_command" in
    "shutdown")
		run_cmd --shutdown
        ;;
    "reboot"|"restart")
		run_cmd --reboot
        ;;
    "lock")
        run_cmd --lock
        ;;
    "suspend")
		run_cmd --suspend
        ;;
esac
