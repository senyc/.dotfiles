#!/usr/bin/env bash
file_name="$HOME/.aspell.en.pws" 

if [[ -z "$1" ]]; then
    echo "Please invoke like $0 <word>" >&2
    exit 1
fi

if ! [[ -f "$file_name" ]]; then
    echo "Please create or link $file_name" >&2
    exit 1
fi

echo "$1" >> "$file_name"

if grep "$1" "$file_name" > /dev/null; then
    echo "Added $1 to $file_name"
fi
