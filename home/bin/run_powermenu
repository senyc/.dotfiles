#!/usr/bin/env bash

file_name="powermenu_theme.rasi"

if [[ -n $XDG_CONFIG_HOME ]]; then
    dir="/$XDG_CONFIG_HOME/rofi/themes/$file_name"
else
    dir="/$HOME/.config/rofi/themes/$file_name"
fi

uptime="$(uptime -p | sed -e 's/up //g')"

shutdown=''
reboot=''
lock=''
suspend=''

rofi_cmd() { rofi -dmenu -p "I'm sorry ${USER}..." -mesg "Uptime: $uptime" -theme "$dir"; }
run_rofi() { echo -e "$shutdown\n$reboot\n$suspend\n$lock" | rofi_cmd; }

run_cmd() {
    if [[ $1 == '--shutdown' ]]; then
        shutdown -h now
    elif [[ $1 == '--reboot' ]]; then
        reboot
    elif [[ $1 == '--suspend' ]]; then
        mpc -q pause
        amixer set Master mute
        systemctl suspend
    elif [[ $1 == '--lock' ]]; then
        lock_screen
    fi
}

case "$(run_rofi)" in
    "$shutdown")
		run_cmd --shutdown
        ;;
    "$reboot")
		run_cmd --reboot
        ;;
    "$lock")
        run_cmd --lock
        ;;
    "$suspend")
		run_cmd --suspend
        ;;
    /?)
        exit 1
        ;;
esac

